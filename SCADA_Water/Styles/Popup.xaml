<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   >

    <Style x:Key="HeaderStyle" TargetType="Popup">
        
        <Setter Property="Button.Background" Value="Coral"></Setter>
        
        <!--<Setter Property="FontSize" Value="24" />-->
    </Style>

    <Style x:Key="GridStyle" TargetType="Grid">
        <Setter Property="Grid.Background" Value="#5d8dc8" /> 
        <Setter Property="TextBlock.Foreground" Value="White"  />
        

    </Style>
    <Style x:Key="TextBlockStyle" TargetType="TextBlock">
        <Setter Property="TextBlock.Margin" Value="0,-5,13,5"  />
    </Style>
    <Style x:Key="LineStyle" TargetType="Line">
        <Setter Property="Line.StrokeThickness" Value="1" />
        <Setter Property="Line.Stroke" Value="White" />
        <Setter Property="Line.X1" Value="0" />
        <Setter Property="Line.X2" Value="300" />
        <Setter Property="Line.Y1" Value="0" />
        <Setter Property="Line.Y2" Value="0" /> 
        <Setter Property="Line.Height" Value="16" />
        <Setter Property="Line.VerticalAlignment" Value="Top" />
    </Style>

</ResourceDictionary>