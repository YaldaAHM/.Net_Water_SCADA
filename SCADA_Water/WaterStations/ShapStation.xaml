<UserControl x:Class="ReporterWPF.WaterStations.ShapStation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReporterWPF.WaterStations"
             xmlns:userControls="clr-namespace:ReporterWPF.WaterStations.Controls"
             mc:Ignorable="d" 
             >
    <Grid>
        <StackPanel>
        <userControls:StationPopup  x:Name="StationPopup"></userControls:StationPopup>
            <Button Width="25" Height="25" Click="ButtonBase_OnClick" Background="{x:Null}" BorderBrush="{x:Null}"><!--MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown"-->
        <Image Name="StationImage" Source="../Image/WaterStation/station.png"  
               MouseEnter="UIElement_OnMouseEnter"    ></Image>

</Button>
        <TextBlock Name="tbTest"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
